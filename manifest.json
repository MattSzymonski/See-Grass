{
    "manifest_version": 3,
    "name": "See Grass",
    "version": "1.0.0",
    "description": "A Chrome extension that reminds you to rest your eyes and maybe go see some grass to take a break from screen time.",
    "author": "MattSzymonski",
    "homepage_url": "https://github.com/MattSzymonski/See-Grass",
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "scripting",
        "offscreen"
    ],
    "host_permissions": [
        "*://meet.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/see_grass_logo_16.png",
        "32": "icons/see_grass_logo_32.png",
        "48": "icons/see_grass_logo_48.png",
        "128": "icons/see_grass_logo_128.png"
    },
    "action": {
        "default_title": "See Grass",
        "default_icon": {
            "128": "icons/see_grass_simple_icon.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sounds/sound_1.mp3",
                "sounds/sound_2.mp3",
                "images/grass_1.webp"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}