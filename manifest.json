{
    "manifest_version": 3,
    "name": "See Grass",
    "version": "1.0.0",
    "description": "Reminds you to rest your eyes and maybe go see some grass after too much screen time",
    "permissions": [
        "storage",
        "alarms",
        "notifications",
        "tabs",
        "scripting",
        "offscreen"
    ],
    "host_permissions": [
        "*://meet.google.com/*"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "options_page": "options.html",
    "icons": {
        "128": "icons/grass_icon128.png"
    },
    "action": {
        "default_title": "See Grass",
        "default_icon": {
            "128": "icons/grass_icon128.png"
        },
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "sounds/sound_1.mp3",
                "sounds/sound_2.mp3",
                "images/grass_1.webp"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}